@model bus_reservation.Models.BusType

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <h1>Create</h1>

    <h4>BusType</h4>
    <hr />
    <div class="row g-4">
        <div class="bg-white rounded h-100 p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-sm-12 col-xl-12 mb-3">
                        <div class="form-group">
                            <input asp-for="BusTypeName" class="form-control" required placeholder="Enter Bus Type Name"/>
                            <span asp-validation-for="BusTypeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-12 col-xl-12 mt-4 mb-2">
                    <div class="form-group">
                        <input type="submit" value="Add Bus Type" class="btn btn-outline-success w-100" />
                       </div>
                </div>
            </form>
        </div>
    </div>

    <div class ="mt-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>
